<% content_for :head do %>
	<script type="text/javascript">
		$(document).ready(function() {
			$('#why_register').click(function() {
				$('#why_register_popup').fadeIn();
			});
			$('#close').click(function() {
				$('#why_register_popup').fadeOut();
			});
			$('#register_why').click(function() {
				window.location.href = '/register';
			});
				
		});
	</script>

<% end %>
<div id="welcome">
<h2>Finally, A Cure You Can Get Behind</h2>
<img src="/images/postcard-stack.png" class="left" width="300px">
