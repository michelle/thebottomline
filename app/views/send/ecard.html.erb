<div id="send">
<h2>Send an E-card</h2>
<!-- TODO(michelle): Add a loop for past cards once model is done. -->
<%= form_tag :action=> "ecard_create" do %>
<div class="clearfix">
<%= label_tag 'card[from_name]', 'Name'%>
<%= text_field_tag('card[from_name]', nil, {:class => 'rinput', :placeholder => 'Your Colon', :value => @user.nil? ? '' : @user.name, :required => 'required'})%>  
</div>
<div class="clearfix">
<%= label_tag 'email', 'Email'%>
<%= email_field_tag('email', nil, {:class => 'rinput', :placeholder => 'colon@thebottomline.com', :value => @user.nil? ? '' : @user.email, :required => 'required'})%>  
</div>
<div class="clearfix">
<%= label_tag 'card[to_name]', 'Recipient Name'%>
<%= text_field_tag('card[to_name]', nil, {:class => 'rinput', :placeholder => 'My Kitten', :required => 'required'})%>  
</div>
<div class="clearfix">
<%= label_tag 'card[address]', 'Recipient Email'%>
<%= email_field_tag('card[address]', nil, {:class => 'rinput', :placeholder => 'kitten@cats.com', :required => 'required'})%>  
</div>
<div class="clearfix">
<%= label_tag 'card[message]', 'Personal Message'%>
<%= text_area_tag('card[message]', nil, {:class => 'rinput', :placeholder => 'Getting screened is anything “butt” optional.', :required => 'required'})%>  
</div>
<div class="clear"></div>
<%= submit_tag 'Send my card!', :class => 'rbutton' %>
<% end %>
</div>
